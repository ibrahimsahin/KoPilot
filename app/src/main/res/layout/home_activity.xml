<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/road"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <ImageView
            android:layout_width="129dp"
            android:id="@+id/ImageViewGirisLogo"
            android:layout_height="129dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha=".90"
            android:src="@drawable/gosterge"
            android:layout_gravity="center" />






        <Button
            android:visibility="visible"
            android:textColor="@color/bembeyaz"
            android:textSize="@dimen/button_text"
            android:text="GiriÅŸ"
            android:textStyle="bold"
            android:background="@drawable/my_grass_button"
            android:layout_width="@dimen/ana_menu_button_width"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:id="@+id/button_giris"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_gravity="center|bottom" />

    </FrameLayout>
</LinearLayout>