<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="700dp"
    android:weightSum="1">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/gosterge"
            android:layout_width="@dimen/small_icon_width"
            android:layout_height="@dimen/small_icon_width"
            android:layout_marginRight="5dp" />

        <TextView
            android:text="@string/download_uyari"
            android:id="@+id/info_tv"
            android:textSize="@dimen/tab_label_size"
            android:textColor="@color/red"
            android:singleLine="false"
            android:maxLines = "10"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            />

    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="@dimen/edittext_height">



        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Resim Dosya Boyutu"
                android:id="@+id/image_file_checkbox" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <TextView
                android:text="...mb"
                android:id="@+id/image_size_tv"
                android:textSize="@dimen/normal_definition_text_size"
                android:textColor="@color/blue"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="@dimen/edittext_height">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Video Dosya Boyutu"
                android:id="@+id/video_file_checkbox" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <TextView
                android:text="...mb"
                android:id="@+id/video_size_tv"
                android:textSize="@dimen/normal_definition_text_size"
                android:textColor="@color/blue"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="@dimen/edittext_height">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ses Dosya Boyutu"
                android:id="@+id/audio_file_checkbox" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <TextView
                android:text="...mb"
                android:id="@+id/audio_size_tv"
                android:textSize="@dimen/normal_definition_text_size"
                android:textColor="@color/blue"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="@dimen/edittext_height">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pdf Dosya Boyutu"
                android:id="@+id/pdf_file_checkbox" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <TextView
                android:text="...mb"
                android:id="@+id/pdf_size_tv"
                android:textSize="@dimen/normal_definition_text_size"
                android:textColor="@color/blue"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="@dimen/file_size_box_button_width"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:id="@+id/cancel_button" />

        <Button
            android:layout_width="@dimen/file_size_box_button_width"
            android:layout_height="wrap_content"
            android:text="Ä°ndir"
            android:id="@+id/file_download_button" />
    </LinearLayout>



</LinearLayout>