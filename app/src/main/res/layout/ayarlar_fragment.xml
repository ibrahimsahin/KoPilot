    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <ImageView
                android:id="@+id/paylas_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:contentDescription="@string/app_name"
                android:src="@drawable/paylas"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ayarlar_button_height"
                android:text="@string/paylas_text"
                android:id="@+id/paylas_button"
                android:background="@color/kirlibeyaz"
                android:layout_marginLeft="0dp"
                style="@style/content_header_textview_ayarlar"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <ImageView
                android:id="@+id/puan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:contentDescription="@string/app_name"
                android:src="@drawable/puan"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ayarlar_button_height"
                android:text="@string/puan_ver_text"
                android:id="@+id/puan_button"
                android:background="@color/kirlibeyaz"
                android:layout_marginLeft="0dp"
                style="@style/content_header_textview_ayarlar"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:weightSum="1">

            <ImageView
                android:id="@+id/geri_bildirim_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:contentDescription="@string/app_name"
                android:src="@drawable/feedback"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ayarlar_button_height"
                android:text="@string/geri_bildirim_text"
                android:id="@+id/feedback_button"
                android:background="@color/kirlibeyaz"
                android:layout_marginLeft="0dp"
                style="@style/content_header_textview_ayarlar"
                android:layout_gravity="center_horizontal" />



        </LinearLayout>
    </LinearLayout>




</LinearLayout>