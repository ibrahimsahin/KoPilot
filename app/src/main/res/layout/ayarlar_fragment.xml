    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bembeyaz"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/gosterge"
            android:layout_width="@dimen/ayarlar_i_height"
            android:layout_height="@dimen/ayarlar_i_height"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ayarlar_header"
            android:text="KoPilot"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_width="wrap_content"
            style="@style/content_header_textview"
            android:textColor="@color/light_gray_header_color"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



